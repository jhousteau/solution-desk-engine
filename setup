#!/bin/bash
set -e

echo "ğŸš€ Setting up solution-desk-engine development environment..."

# Check if we're in the right directory
if [[ ! -f "pyproject.toml" ]]; then
    echo "âŒ Error: Not in project root directory (pyproject.toml not found)"
    exit 1
fi

# Install dependencies with Poetry
echo "ğŸ“¦ Installing dependencies..."
if command -v poetry >/dev/null 2>&1; then
    poetry install
else
    echo "âŒ Error: Poetry not found. Please install Poetry first."
    echo "   Visit: https://python-poetry.org/docs/#installation"
    exit 1
fi

# Install Genesis CLI for project commands
echo "ğŸ”§ Installing Genesis CLI..."
if [[ -d "../genesis" ]]; then
    # Install Genesis from local development directory
    poetry add "../genesis"
    echo "âœ… Genesis CLI installed from local development version"
elif command -v pip >/dev/null 2>&1; then
    # Try to install Genesis from PyPI (if published)
    if poetry add genesis-cli 2>/dev/null; then
        echo "âœ… Genesis CLI installed from PyPI"
    else
        echo "âš ï¸  Genesis CLI not available via PyPI, using project-specific commands"
    fi
else
    echo "âš ï¸  Could not install Genesis CLI - using project-specific commands"
fi

# Install pre-commit hooks
echo "ğŸ”’ Installing pre-commit hooks..."
poetry run pre-commit install --install-hooks

# Check if direnv is available
if command -v direnv >/dev/null 2>&1; then
    echo "ğŸŒ direnv detected - environment will auto-load when entering directory"
    direnv allow
else
    echo "âš ï¸  direnv not found - you can install it for automatic environment loading"
    echo "   Or manually source .envrc: source .envrc"
fi

# Initialize git hooks if needed
if [[ -d ".git" ]]; then
    echo "ğŸ”§ Git repository detected - pre-commit hooks installed"
else
    echo "â„¹ï¸  No git repository found - hooks will be installed when you init git"
fi

# Test the setup
echo "ğŸ§ª Testing setup..."
poetry run python -c "print('âœ… Python environment working')"
poetry run black --version >/dev/null && echo "âœ… Code formatting tools ready"
poetry run pytest --version >/dev/null && echo "âœ… Testing framework ready"

# Test Genesis CLI availability
if poetry run genesis --version >/dev/null 2>&1; then
    echo "âœ… Genesis CLI ready"
    GENESIS_AVAILABLE=true
else
    echo "âš ï¸  Genesis CLI not available - using make targets instead"
    GENESIS_AVAILABLE=false
fi

echo ""
echo "ğŸ‰ Setup complete! You can now:"
echo "   â€¢ Run tests: make test"
echo "   â€¢ Format code: make format"
echo "   â€¢ Start dev server: make run"

if [[ "$GENESIS_AVAILABLE" == "true" ]]; then
    echo "   â€¢ Smart commit: genesis commit"
    echo "   â€¢ Check status: genesis status"
    echo "   â€¢ See all commands: make help"
    echo ""
    echo "ğŸ’¡ Pro tip: Use 'genesis status' to check project health"
else
    echo "   â€¢ Smart commit: make genesis-commit MSG=\"your message\""
    echo "   â€¢ Check status: make genesis-status"
    echo "   â€¢ See all commands: make help"
    echo ""
    echo "ğŸ’¡ Pro tip: Use 'make genesis-status' to check project health"
fi
